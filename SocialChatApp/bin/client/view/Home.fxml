<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>

<HBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controller.HomeController"
      prefWidth="1100.0" prefHeight="700.0"
      stylesheets="@chat.css" spacing="8" styleClass="root-bg">

    <!-- ============ SIDEBAR TRÁI: Đoạn chat + Tìm kiếm + Danh sách ============ -->
    <children>
        <VBox fx:id="sidebar" prefWidth="260.0" minWidth="220.0" spacing="10"
              styleClass="panel sidebar">
            <children>
                <Label text="Đoạn chat" styleClass="panel-title"/>	

                <!-- Ô tìm kiếm -->
                <TextField fx:id="searchField" promptText="Tìm kiếm..."
                           styleClass="search-field"/>

                <!-- Danh sách chat -->
                <ScrollPane fitToWidth="true" HBox.hgrow="NEVER" prefHeight="600.0"
                            styleClass="list-scroll">
                    <content>
                        <VBox fx:id="chatList" spacing="6" fillWidth="true">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <!-- Các đoạn chat sẽ xuất hiện tại đây -->
                            
                        </VBox>
                    </content>
                </ScrollPane>
            </children>

            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </VBox>

        <!-- ============ KHU VỰC GIỮA: Header + Message area + Input bar ============ -->
        <VBox fx:id="centerArea" spacing="8" HBox.hgrow="ALWAYS" styleClass="panel center-panel">

            <!-- Header: (Image + VBox(Tên, trạng thái)) sát trái, nút sát phải -->
            <HBox spacing="10" styleClass="chat-header" prefHeight="68.0" alignment="CENTER_LEFT">
                <children>
                    <ImageView fitWidth="44" fitHeight="44" pickOnBounds="true" preserveRatio="true">
					    <image>
					        <Image url="@images/default user.png"/>
					    </image>
					</ImageView>
                    <VBox spacing="2">
                        <children>
                            <Label fx:id="currentChatName" text="Nhóm Lập Trình" styleClass="chat-title"/>
                            <Label fx:id="currentChatStatus" text="Online" styleClass="chat-status-online"/>
                        </children>
                    </VBox>

                    <!-- spacer đẩy nút sang phải -->
                    <Region HBox.hgrow="ALWAYS"/>

                    <!-- nhóm nút action -->
                    <HBox spacing="8">
                        <children>
                            <Button text="Gọi" styleClass="action-btn"/>
                            <Button text="Video" styleClass="action-btn"/>
                            <Button text="⋯" styleClass="action-btn"/>
                            <!-- Nút Logout -->
			                <Button fx:id="logoutBtn" text="🚪 Logout" onAction="#onLogout"
			                        style="-fx-background-color: #EF4444; -fx-text-fill: white; 
			                               -fx-background-radius: 8; -fx-padding: 6 14;"/>
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets top="10" right="12" bottom="10" left="12"/>
                </padding>
            </HBox>

            <!-- Khu tin nhắn -->
			<ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="message-scroll">
			    <content>
			        <VBox fx:id="messageContainer" spacing="8" fillWidth="true">
			            <padding>
			                <Insets top="12" right="12" bottom="12" left="12"/>
			            </padding>
			            <children>
			
			                <!-- TEXT incoming -->
							<HBox spacing="6" alignment="CENTER_LEFT">
							    <children>
							        <VBox fx:id="incomingText" id="incoming-text" maxWidth="420">
							            <children>
							                <Label text="Xin chào 👋" wrapText="true"/>
							            </children>
							        </VBox>
							        <Region HBox.hgrow="ALWAYS"/>
							    </children>
							</HBox>
							
							<!-- TEXT outgoing -->
							<HBox spacing="6" alignment="CENTER_RIGHT">
							    <children>
							        <Region HBox.hgrow="ALWAYS"/>
							        <VBox fx:id="outgoingText" id="outgoing-text" maxWidth="420">
							            <children>
							                <Label text="Chào bạn!" wrapText="true"/>
							            </children>
							        </VBox>
							    </children>
							</HBox>
							
							<!-- IMAGE incoming -->
							<HBox spacing="6" alignment="CENTER_LEFT">
							    <children>
							        <VBox fx:id="incomingImage" id="incoming-image">
							            <children>
							                <ImageView fitWidth="260" preserveRatio="true">
							                    <image><Image url="@images/dog.png"/></image>
							                </ImageView>
							                <Label text="IMG_1234.jpg • 1.2 MB"/>
							            </children>
							        </VBox>
							        <Region HBox.hgrow="ALWAYS"/>
							    </children>
							</HBox>
							
							<!-- IMAGE outgoing -->
							<HBox spacing="6" alignment="CENTER_RIGHT">
							    <children>
							        <Region HBox.hgrow="ALWAYS"/>
							        <VBox fx:id="outgoingImage" id="outgoing-image">
							            <children>
							                <ImageView fitWidth="260" preserveRatio="true">
							                    <image><Image url="@images/dog.png"/></image>
							                </ImageView>
							                <Label text="Đã gửi"/>
							            </children>
							        </VBox>
							    </children>
							</HBox>
							
							<!-- FILE incoming -->
							<HBox spacing="6" alignment="CENTER_LEFT">
							    <children>
							        <VBox fx:id="incomingFile" id="incoming-file"
							              style="-fx-background-color:#E5EEFF; -fx-background-radius:10; -fx-padding:8 12;">
							            <children>
							                <HBox spacing="10" alignment="CENTER_LEFT">
							                    <children>
							                        <!-- Emoji icon thay cho ImageView -->
							                        <Label text="📄" style="-fx-font-size:20px;"/>
							                        
							                        <VBox spacing="2">
							                            <children>
							                                <Label text="Báo cáo_PBL4.pdf" styleClass="file-name"/>
							                                <Label text="PDF • 824 KB" styleClass="meta"/>
							                            </children>
							                        </VBox>
							                        
							                        <Region HBox.hgrow="ALWAYS"/>
							                        <Button text="Tải"/>
							                    </children>
							                </HBox>
							            </children>
							        </VBox>
							        <Region HBox.hgrow="ALWAYS"/>
							    </children>
							</HBox>
							
							<!-- FILE outgoing -->
							<HBox spacing="6" alignment="CENTER_RIGHT">
							    <children>
							        <Region HBox.hgrow="ALWAYS"/>
							        <VBox fx:id="outgoingFile" id="outgoing-file"
							              style="-fx-background-color:#1882FF; -fx-background-radius:10; -fx-padding:8 12;">
							            <children>
							                <HBox spacing="10" alignment="CENTER_LEFT">
							                    <children>
							                        <!-- Emoji icon -->
							                        <Label text="📄" style="-fx-font-size:20px;"/>
							                        
							                        <VBox spacing="2">
							                            <children>
							                                <Label text="thietke.docx" styleClass="file-name"/>
							                                <Label text="DOCX • 212 KB" styleClass="meta"/>
							                            </children>
							                        </VBox>
							                        
							                        <Region HBox.hgrow="ALWAYS"/>
							                        <Button text="Mở"/>
							                    </children>
							                </HBox>
							            </children>
							        </VBox>
							    </children>
							</HBox>

							<!-- VOICE incoming -->
							<HBox spacing="6" alignment="CENTER_LEFT">
							    <children>
							        <HBox fx:id="incomingVoice" id="incoming-voice" spacing="10" alignment="CENTER_LEFT">
							            <children>
							                <Button text="▶" styleClass="audio-btn"/>
							                <Slider prefWidth="200"/>
							                <Label text="00:18"/>
							            </children>
							        </HBox>
							        <Region HBox.hgrow="ALWAYS"/>
							    </children>
							</HBox>
							
							<!-- VOICE outgoing -->
							<HBox spacing="6" alignment="CENTER_RIGHT">
							    <children>
							        <Region HBox.hgrow="ALWAYS"/>
							        <HBox fx:id="outgoingVoice" id="outgoing-voice" spacing="10" alignment="CENTER_LEFT">
							            <children>
							                <Button text="⏸" styleClass="audio-btn"/>
							                <Slider prefWidth="200" value="35"/>
							                <Label text="00:42"/>
							            </children>
							        </HBox>
							    </children>
							</HBox>

			
			            </children>
			        </VBox>
			    </content>
			</ScrollPane>


            <!-- Input bar: mic, file, textfield, send -->
            <HBox spacing="8" styleClass="input-bar" alignment="CENTER_LEFT">
                <children>
                    <Button text="🎤" styleClass="icon-btn"/>
                    <Button text="📎" styleClass="icon-btn"/>
                    <TextField fx:id="messageField" promptText="Nhập tin nhắn..." HBox.hgrow="ALWAYS"/>
                    <Button text="Gửi" styleClass="send-btn"/>
                </children>
                <padding>
                    <Insets top="10" right="12" bottom="10" left="12"/>
                </padding>
            </HBox>
        </VBox>

        <!-- ============ PANEL PHẢI: Thông tin đoạn chat + menu ============ -->
        <VBox fx:id="infoPanel" prefWidth="280.0" minWidth="240.0" spacing="12" styleClass="panel info-panel">
            <children>
                <VBox spacing="10" alignment="CENTER" styleClass="info-header">
                    <children>
                        <ImageView fitWidth="84" fitHeight="84" pickOnBounds="true" preserveRatio="true">
						    <image>
						        <Image url="@images/default user.png"/>
						    </image>
						</ImageView>
                        <Label fx:id="infoName" text="Nhóm Lập Trình" styleClass="info-name"/>
                        <Label fx:id="chatStatus" text="Online" styleClass="chat-status-online"/>
                    </children>
                </VBox>

				<!-- Sau phần VBox info-header -->
				<HBox spacing="20" alignment="CENTER">
				    <children>
				        <!-- Mời -->
				        <VBox alignment="CENTER" spacing="4">
				            <children>
				                <Label text="👥" style="-fx-font-size: 22px;"/>
				                <Label text="Mời" style="-fx-font-size: 12px; -fx-text-fill: #374151;"/>
				            </children>
				        </VBox>
				
				        <!-- Thông báo -->
				        <VBox alignment="CENTER" spacing="4">
				            <children>
				                <Label text="🔔" style="-fx-font-size: 22px;"/>
				                <Label text="Thông báo" style="-fx-font-size: 12px; -fx-text-fill: #374151;"/>
				            </children>
				        </VBox>
				
				        <!-- Tìm kiếm -->
				        <VBox alignment="CENTER" spacing="4">
				            <children>
				                <Label text="🔍" style="-fx-font-size: 22px;"/>
				                <Label text="Tìm kiếm" style="-fx-font-size: 12px; -fx-text-fill: #374151;"/>
				            </children>
				        </VBox>
				    </children>
				</HBox>

                <Separator/>

                <!-- Accordion chứa các mục xổ xuống -->
				<Accordion fx:id="rightMenu" VBox.vgrow="NEVER">
				    <panes>
				
				        <!-- 1) Thông tin đoạn chat -->
				        <TitledPane text="Thông tin đoạn chat" animated="true" expanded="false" styleClass="menu-pane">
				            <content>
				                <VBox spacing="4" styleClass="submenu">
				                    <children>
				                        <Label text="Item 1" styleClass="submenu-item"/>
				                        <Label text="Item 2" styleClass="submenu-item"/>
				                        <Label text="Item 3" styleClass="submenu-item"/>
				                    </children>
				                </VBox>
				            </content>
				        </TitledPane>
				
				        <!-- 2) Tùy chỉnh đoạn chat -->
				        <TitledPane text="Tùy chỉnh đoạn chat" animated="true" expanded="false" styleClass="menu-pane">
				            <content>
				                <VBox spacing="4" styleClass="submenu">
				                    <children>
				                        <Label text="Theme" styleClass="submenu-item"/>
				                        <Label text="Emoji" styleClass="submenu-item"/>
				                        <Label text="Màu chat" styleClass="submenu-item"/>
				                    </children>
				                </VBox>
				            </content>
				        </TitledPane>
				
				        <!-- 3) File phương tiện & File -->
				        <TitledPane text="File phương tiện &amp; File" animated="true" expanded="false" styleClass="menu-pane">
				            <content>
				                <VBox spacing="4" styleClass="submenu">
				                    <children>
				                        <Label text="Ảnh" styleClass="submenu-item"/>
				                        <Label text="Video" styleClass="submenu-item"/>
				                        <Label text="Tài liệu" styleClass="submenu-item"/>
				                    </children>
				                </VBox>
				            </content>
				        </TitledPane>
				
				        <!-- 4) Quyền riêng tư & hỗ trợ -->
				        <TitledPane text="Quyền riêng tư &amp; hỗ trợ" animated="true" expanded="false" styleClass="menu-pane">
				            <content>
				                <VBox spacing="4" styleClass="submenu">
				                    <children>
				                        <Label text="Báo cáo sự cố" styleClass="submenu-item"/>
				                        <Label text="Cài đặt bảo mật" styleClass="submenu-item"/>
				                    </children>
				                </VBox>
				            </content>
				        </TitledPane>
				
				    </panes>
				</Accordion>

            </children>

            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </VBox>
    </children>
</HBox>
