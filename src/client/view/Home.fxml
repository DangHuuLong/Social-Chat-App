<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>

<HBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controller.HomeController"
      prefWidth="1100.0" prefHeight="700.0"
      stylesheets="@chat.css" spacing="8" styleClass="root-bg">

    <!-- ============ SIDEBAR TRÁI ============ -->
    <children>
        <VBox fx:id="sidebar" prefWidth="260.0" minWidth="220.0" spacing="10"
              styleClass="panel sidebar">
            <children>
                <Label text="Đoạn chat" styleClass="panel-title"/>	
                <TextField fx:id="searchField" promptText="Tìm kiếm..."
                           styleClass="search-field"/>
                <ScrollPane fitToWidth="true" HBox.hgrow="NEVER" prefHeight="600.0"
                            styleClass="list-scroll">
                    <content>
                        <VBox fx:id="chatList" spacing="6" fillWidth="true">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </VBox>

        <!-- ============ PANEL GIỮA: Header + Message area + Input bar ============ -->
        <VBox fx:id="centerArea" spacing="8" HBox.hgrow="ALWAYS" styleClass="panel center-panel">

            <!-- Header -->
            <HBox spacing="10" styleClass="chat-header" prefHeight="68.0" alignment="CENTER_LEFT">
                <children>
                    <ImageView fitWidth="44" fitHeight="44" pickOnBounds="true" preserveRatio="true">
					    <image>
					        <Image url="@images/default user.png"/>
					    </image>
					</ImageView>
                    <VBox spacing="2">
                        <children>
                            <Label fx:id="currentChatName" text="" styleClass="chat-title"/>
                            <Label fx:id="currentChatStatus" text="" styleClass="chat-status-offline"/>
                        </children>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <HBox spacing="8">
                        <children>
                            <Button text="Gọi" styleClass="action-btn"/>
                            <Button text="Video" styleClass="action-btn"/>
                            <Button text="⋯" styleClass="action-btn"/>
			                <Button fx:id="logoutBtn" text="🚪 Logout" onAction="#onLogout"
			                        style="-fx-background-color: #EF4444; -fx-text-fill: white; 
			                               -fx-background-radius: 8; -fx-padding: 6 14;"/>
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets top="10" right="12" bottom="10" left="12"/>
                </padding>
            </HBox>

            <!-- Khu tin nhắn -->
			<ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="message-scroll">
			    <content>
			        <VBox fx:id="messageContainer" spacing="8" fillWidth="true">
			            <padding>
			                <Insets top="12" right="12" bottom="12" left="12"/>
			            </padding>
			            <!-- Tin nhắn sẽ được thêm động từ Controller -->
			        </VBox>
			    </content>
			</ScrollPane>

            <!-- Input bar -->
            <HBox spacing="8" styleClass="input-bar" alignment="CENTER_LEFT">
                <children>
                    <Button text="🎤" styleClass="icon-btn"/>
                    <Button text="📎" styleClass="icon-btn"/>
                    <TextField fx:id="messageField" promptText="Nhập tin nhắn..." HBox.hgrow="ALWAYS"/>
                    <Button text="Gửi" styleClass="send-btn"/>
                </children>
                <padding>
                    <Insets top="10" right="12" bottom="10" left="12"/>
                </padding>
            </HBox>
        </VBox>

        <!-- ============ PANEL PHẢI ============ -->
        <VBox fx:id="infoPanel" prefWidth="280.0" minWidth="240.0" spacing="12" styleClass="panel info-panel">
            <children>
                <VBox spacing="10" alignment="CENTER" styleClass="info-header">
                    <children>
                        <ImageView fitWidth="84" fitHeight="84" pickOnBounds="true" preserveRatio="true">
						    <image>
						        <Image url="@images/default user.png"/>
						    </image>
						</ImageView>
                        <Label fx:id="infoName" text="" styleClass="info-name"/>
                        <Label fx:id="chatStatus" text="" styleClass="chat-status-offline"/>
                    </children>
                </VBox>
                <!-- Giữ nguyên phần menu/phụ như ban đầu -->
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </VBox>
    </children>
</HBox>
